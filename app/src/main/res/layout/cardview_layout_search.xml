<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        app:cardUseCompatPadding="true"
        app:cardCornerRadius="@dimen/_2sdp"
        app:cardElevation="@dimen/_2sdp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/_2sdp">

            <RelativeLayout
                android:id="@+id/rel1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:gravity="center_horizontal">

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/recycler_img"
                    android:layout_margin="@dimen/_2sdp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal" />

            </RelativeLayout>


            <RelativeLayout
                android:id="@+id/txt_details"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/rel1"
                android:layout_centerHorizontal="true"
                android:layout_gravity="center_horizontal"
                android:layout_margin="@dimen/_2sdp">

                <RelativeLayout
                    android:id="@+id/lay1"
                    android:layout_margin="@dimen/_2sdp"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/_20sdp"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/txt_hotel"
                        android:layout_width="@dimen/_150sdp"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/avenirltstd_light"
                        android:maxLines="1"
                        android:layout_centerVertical="true"
                        android:text="Lemon Tree Premier"
                        android:textColor="@color/colorPrimary"
                        android:textSize="@dimen/_10sdp"
                        android:textStyle="bold" />

                   <!-- <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_toRightOf="@+id/txt_hotel">-->


                       <!-- <RatingBar
                            android:id="@+id/ratingBar"
                            style="?android:attr/ratingBarStyleSmall"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_gravity="center_vertical"
                            android:isIndicator="true"
                            android:numStars="5"
                            android:paddingBottom="@dimen/_5sdp"
                            android:rating="4.0" />-->

                        <RatingBar
                            android:layout_height="@dimen/_24sdp"
                            android:layout_width="wrap_content"
                            style="@style/MyRatingBarTwo"
                            android:layout_alignParentEnd="true"
                            android:rating="4"
                            android:progressTint="@color/colorPrimary"
                            android:id="@+id/ratingBar"
                            android:numStars="5" />

                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/lay2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/lay1"
                    android:layout_margin="@dimen/_2sdp"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/loc"
                        android:layout_width="@dimen/_10sdp"
                        android:layout_height="@dimen/_10sdp"
                        android:layout_centerVertical="true"
                        app:srcCompat="@drawable/location_markar24dp" />

                    <TextView
                        android:id="@+id/txt_distannce"
                        android:layout_width="@dimen/_150sdp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_2sdp"
                        android:layout_toEndOf="@+id/loc"
                        android:layout_centerVertical="true"
                        android:fontFamily="@font/avenirltstd_light"
                        android:maxLines="1"
                        android:text="ABC Building NOIDA- 135"
                        android:textSize="@dimen/_10sdp" />

                    <TextView
                        android:id="@+id/txt_reviews"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:text="3453 Review"
                        android:layout_centerVertical="true"
                        android:fontFamily="@font/avenirltstd_light"
                        android:textSize="@dimen/_10sdp"
                        android:textStyle="bold" />


                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/lay2"
                    android:layout_margin="@dimen/_2sdp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/txt_price"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:fontFamily="@font/avenirltstd_light"
                        android:text="@string/price_placeholder"
                        android:textStyle="bold"
                        android:textColor="#41B417"
                        android:textSize="@dimen/_10sdp" />

                    <TextView
                        android:id="@+id/txt_review"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/avenirltstd_light"
                        android:layout_alignParentEnd="true"
                        android:text="Excellent"
                        android:textColor="@color/colorPrimary"
                        android:textSize="@dimen/_10sdp" />
                </RelativeLayout>

            </RelativeLayout>


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/txt_details"
                android:layout_marginTop="@dimen/_2sdp"
                android:layout_marginBottom="@dimen/_2sdp">

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rec_amenities"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/_2sdp"
                    android:orientation="horizontal" />


            </RelativeLayout>
        </RelativeLayout>
    </androidx.cardview.widget.CardView>
</androidx.coordinatorlayout.widget.CoordinatorLayout>