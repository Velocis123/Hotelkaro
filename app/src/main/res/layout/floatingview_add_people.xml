<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">


        <RelativeLayout
            android:layout_width="@dimen/_300sdp"
            android:layout_height="wrap_content">

            <LinearLayout
                android:id="@+id/len1"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_40sdp"
                android:orientation="horizontal">


                <TextView
                    android:layout_weight="5"
                    android:id="@+id/room_no"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:paddingStart="@dimen/_10sdp"
                    android:fontFamily="@font/avenirltstd_light"
                    android:gravity="center_vertical"
                    android:text="Room"
                    android:textColor="@color/colorblack"
                    android:textSize="@dimen/_20sdp" />

                <ImageView
                    android:id="@+id/cross"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:layout_width="@dimen/_40sdp"
                    android:layout_height="match_parent"
                    android:src="@drawable/ic_action_cross"
                    />





            </LinearLayout>

            <LinearLayout
                android:id="@+id/view1"
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_below="@id/len1"
                android:layout_marginTop="@dimen/_1sdp">

                <View
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginStart="@dimen/_10sdp"
                    android:layout_marginEnd="@dimen/_10sdp"
                    android:background="@color/colorGrey" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/len2"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_80sdp"
                android:layout_below="@+id/view1"
                android:layout_marginTop="@dimen/_1sdp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="@dimen/_50sdp"
                    android:layout_height="@dimen/_40sdp"
                    android:layout_marginStart="@dimen/_15sdp"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_20sdp"
                        android:fontFamily="@font/avenirltstd_light"
                        android:gravity="center"
                        android:text="Adults"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_20sdp"
                        android:fontFamily="@font/avenirltstd_light"
                        android:gravity="center"
                        android:text="(5+ Years)"
                        android:textSize="@dimen/_8sdp" />


                </LinearLayout>


                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/_30sdp"
                    android:layout_marginLeft="@dimen/_15sdp"
                    android:background="@drawable/edittext_corners">

                    <LinearLayout
                        android:layout_width="0.5dp"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="@dimen/_1sdp">

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@color/colorblack" />


                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/btn_1"
                        android:layout_width="@dimen/_65sdp"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="@dimen/_1sdp">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:fontFamily="@font/avenirltstd_light"
                            android:gravity="center"
                            android:text="1"
                            android:textSize="@dimen/_20sdp"
                            android:textStyle="bold" />

                    </LinearLayout>


                    <LinearLayout
                        android:layout_width="0.5dp"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="@dimen/_1sdp">

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@color/colorblack" />

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/btn_2"
                        android:layout_width="@dimen/_65sdp"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="@dimen/_1sdp">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:fontFamily="@font/avenirltstd_light"
                            android:gravity="center"
                            android:text="2"
                            android:textSize="@dimen/_20sdp"
                            android:textStyle="bold" />


                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0.5dp"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="@dimen/_1sdp">

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@color/colorblack" />

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/btn_3"
                        android:layout_width="@dimen/_65sdp"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="@dimen/_1sdp">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:fontFamily="@font/avenirltstd_light"
                            android:gravity="center"
                            android:text="3"
                            android:textSize="@dimen/_20sdp"
                            android:textStyle="bold" />


                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0.5dp"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="@dimen/_1sdp">

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@color/colorblack" />


                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/view2"
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_below="@id/len2"
                android:layout_marginTop="@dimen/_1sdp">


                <View
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_alignTop="@+id/view2"
                    android:layout_marginStart="@dimen/_10sdp"
                    android:layout_marginEnd="@dimen/_10sdp"
                    android:background="@color/colorGrey" />


            </LinearLayout>

            <LinearLayout
                android:id="@+id/len4"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_55sdp"
                android:layout_below="@+id/view2"
                android:gravity="center"
                android:layout_marginTop="@dimen/_1sdp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:fontFamily="@font/avenirltstd_light"
                    android:gravity="center_vertical"
                    android:text="Travelling with children ?(0-5 years)"
                    android:textSize="@dimen/_12sdp" />

                <CheckBox
                    android:id="@+id/check_child"
                    android:layout_width="@dimen/_20sdp"
                    android:layout_height="@dimen/_20sdp"
                    android:layout_marginLeft="@dimen/_40sdp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_below="@id/len4"
                android:layout_marginTop="@dimen/_1sdp">


                <View
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_alignTop="@+id/view2"
                    android:layout_marginStart="@dimen/_10sdp"
                    android:layout_marginEnd="@dimen/_10sdp"
                    android:background="@color/colorGrey" />


            </LinearLayout>


            <LinearLayout
                android:id="@+id/len_person"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_65sdp"
                android:layout_below="@+id/len4"
                android:layout_marginTop="@dimen/_1sdp"
                android:gravity="center"
                android:orientation="horizontal"
                android:visibility="visible">


                <Button
                    android:id="@+id/btn_person"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_40sdp"
                    android:layout_marginStart="@dimen/_10sdp"
                    android:layout_marginEnd="@dimen/_10sdp"
                    android:background="@color/colorPrimary"
                    android:fontFamily="@font/avenirltstd_light"
                    android:text="Add Person"
                    android:textAllCaps="false"
                    android:textColor="@color/colorWhite"
                    android:textSize="@dimen/_12sdp"
                    android:textStyle="bold" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/len_del"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_35sdp"
                android:layout_below="@+id/len4"
                android:layout_marginTop="@dimen/_5sdp"
                android:orientation="horizontal"
                android:visibility="gone">


                <Button
                    android:id="@+id/btn_del"
                    android:layout_width="@dimen/_120sdp"
                    android:layout_height="@dimen/_35sdp"
                    android:layout_marginLeft="@dimen/_15sdp"
                    android:background="@drawable/gradiant_back"
                    android:textAllCaps="false"
                    android:fontFamily="@font/avenirltstd_light"
                    android:text="Delete" />

                <LinearLayout
                    android:layout_width="0.5dp"
                    android:layout_height="match_parent"
                    android:layout_below="@id/len2"
                    android:layout_marginLeft="@dimen/_15sdp">


                    <View
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_alignTop="@+id/view2"
                        android:background="@color/colorblack" />


                </LinearLayout>

                <Button
                    android:id="@+id/btn_add"
                    android:layout_width="@dimen/_120sdp"
                    android:layout_height="@dimen/_35sdp"
                    android:layout_marginLeft="@dimen/_15sdp"
                    android:textAllCaps="false"
                    android:background="@drawable/gradiant_back"
                    android:layout_marginRight="@dimen/_15sdp"
                    android:fontFamily="@font/avenirltstd_light"
                    android:text="Add More" />

            </LinearLayout>
        </RelativeLayout>
    </androidx.cardview.widget.CardView>
</RelativeLayout>