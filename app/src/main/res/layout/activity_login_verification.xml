<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/hotel_wall"
    tools:context=".Activity.Login">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/gradiant_back">



    <RelativeLayout
        android:id="@+id/rel1"
        android:layout_width="@dimen/_275sdp"
        android:layout_height="@dimen/_210sdp"
        android:layout_centerInParent="true"
        android:layout_marginTop="@dimen/_20sdp">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:cardBackgroundColor="#AEFFFFFF"
            android:layout_marginLeft="@dimen/_5sdp"
            android:layout_marginTop="@dimen/_5sdp"
            android:layout_marginRight="@dimen/_5sdp"
            android:layout_marginBottom="@dimen/_5sdp"
            android:elevation="@dimen/_20sdp"
            app:cardCornerRadius="@dimen/_10sdp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <LinearLayout
                    android:id="@+id/len2"
                    android:layout_width="match_parent"
                    android:weightSum="4"
                    android:layout_height="@dimen/_30sdp">

                    <ImageView
                        android:layout_width="0dp"
                        android:layout_weight=".5"
                        android:layout_height="wrap_content"
                        android:id="@+id/iv_mobile"
                        android:layout_gravity="center_vertical"
                        android:layout_marginStart="@dimen/_10sdp"
                        app:srcCompat="@drawable/phone_black_24dp"/>


                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="2"
                        android:layout_height="match_parent"
                        android:fontFamily="@font/avenirltstd_light"
                        android:gravity="center"
                       android:paddingLeft="@dimen/_2sdp"
                        android:textColor="#000000"
                        android:text="8750921779"
                        android:textSize="@dimen/_12sdp"
                        android:textAlignment="textStart"
                        />


                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="1.5"
                        android:layout_height="match_parent"
                        android:fontFamily="@font/avenirltstd_light"
                        android:gravity="center_vertical"
                        android:paddingLeft="@dimen/_20sdp"
                        android:text="Change"
                        android:textStyle="bold"
                        android:textColor="@color/colorWhite"
                        android:textSize="@dimen/_12sdp"/>
                </LinearLayout>


                    <View
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_1sdp"
                        android:layout_marginLeft="@dimen/_10sdp"
                        android:layout_marginRight="@dimen/_10sdp"
                        android:background="#000000"/>




                <LinearLayout
                    android:id="@+id/len3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_15sdp"
                    android:orientation="vertical">

                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/_10sdp"
                        android:layout_marginRight="@dimen/_10sdp"
                        android:background="@null"
                        android:padding="@dimen/_5sdp"
                        android:drawablePadding="10dip"
                        android:textColor="#000000"
                        android:textColorHint="#000000"
                        android:drawableStart="@drawable/name_24dp"
                        android:fontFamily="@font/avenirltstd_light"
                        android:hint="Enter Your Full Name"
                        android:textSize="@dimen/_12sdp"
                        />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_1sdp"
                        android:layout_marginLeft="@dimen/_10sdp"
                        android:layout_marginRight="@dimen/_10sdp"
                        android:background="#000000"/>


                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/_10sdp"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:drawablePadding="10dip"
                        android:padding="@dimen/_5sdp"
                        android:textColorHint="#000000"
                        android:textColor="#000000"
                        android:background="@null"
                        android:layout_marginRight="@dimen/_10sdp"
                        android:drawableStart="@drawable/otp_24dp"
                        android:fontFamily="@font/avenirltstd_light"
                        android:hint="Enter OTP "
                        android:textSize="@dimen/_12sdp"
                        />



                    <View
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_1sdp"
                        android:layout_marginLeft="@dimen/_10sdp"
                        android:layout_marginRight="@dimen/_10sdp"
                        android:background="#000000"/>





                    <Button
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_35sdp"
                        android:text="Register"
                        android:textAllCaps="false"
                        android:layout_marginStart="@dimen/_10sdp"
                        android:layout_marginEnd="@dimen/_10sdp"
                        android:textStyle="bold"
                        android:id="@+id/btn_register"
                        android:layout_marginTop="@dimen/_25sdp"
                        android:textColor="@color/colorWhite"
                        android:textSize="@dimen/_18sdp"
                        android:fontFamily="@font/avenirltstd_light"
                        android:background="@color/colorPrimary"/>


                </LinearLayout>




            </LinearLayout>
        </androidx.cardview.widget.CardView>
    </RelativeLayout>
</RelativeLayout>
</RelativeLayout>