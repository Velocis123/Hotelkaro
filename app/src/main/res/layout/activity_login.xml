<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/hotel_wall"
    tools:context=".Activity.Login">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/gradiant_back">


    <RelativeLayout
        android:id="@+id/rel1"
        android:layout_width="@dimen/_275sdp"
        android:layout_height="@dimen/_230sdp"
        android:layout_centerInParent="true"
        android:layout_marginTop="@dimen/_20sdp">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/_5sdp"
            android:layout_marginTop="@dimen/_5sdp"
            app:cardBackgroundColor="#AEFFFFFF"
            android:layout_marginRight="@dimen/_5sdp"
            android:layout_marginBottom="@dimen/_5sdp"
            android:elevation="@dimen/_20sdp"
            app:cardCornerRadius="@dimen/_10sdp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">


                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_50sdp"
                        android:fontFamily="@font/avenirltstd_light"
                        android:gravity="center"
                        android:text="Welcome!"
                        android:textColor="@color/colorblack"
                        android:textSize="@dimen/_20sdp"
                        android:textStyle="bold"/>


                    <View
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_1sdp"
                        android:layout_marginLeft="@dimen/_10sdp"
                        android:layout_marginRight="@dimen/_10sdp"
                        android:background="#000000"/>



                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/_10sdp"
                        android:layout_marginRight="@dimen/_10sdp"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:drawablePadding="10dip"
                        android:padding="@dimen/_10sdp"
                        android:background="@null"
                        android:textColor="#000000"
                        android:textColorHint="#000000"
                        android:drawableStart="@drawable/phone_black_24dp"
                        android:fontFamily="@font/avenirltstd_light"
                        android:hint="Enter your mobile number"
                        android:textSize="@dimen/_12sdp"

                        />



                    <View
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_1sdp"
                        android:layout_marginLeft="@dimen/_10sdp"
                        android:layout_marginRight="@dimen/_10sdp"
                        android:background="#000000"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_20sdp"
                        android:textColor="#000000"
                        android:layout_marginStart="@dimen/_10sdp"
                        android:layout_marginEnd="@dimen/_10sdp"
                        android:fontFamily="@font/avenirltstd_light"
                        android:gravity="center"
                        android:text="OTP will be sent to this number for verification"
                        android:textSize="@dimen/_11sdp"/>


                <Button
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_35sdp"
                    android:text="Go"
                    android:textAllCaps="false"
                    android:layout_marginStart="@dimen/_10sdp"
                    android:layout_marginEnd="@dimen/_10sdp"
                    android:textStyle="bold"
                    android:id="@+id/btn_login"
                    android:layout_marginTop="@dimen/_25sdp"
                    android:textColor="@color/colorWhite"
                    android:textSize="@dimen/_18sdp"
                    android:fontFamily="@font/avenirltstd_light"
                    android:background="@color/colorPrimary"/>

            </LinearLayout>
        </androidx.cardview.widget.CardView>
    </RelativeLayout>

    </RelativeLayout>
</RelativeLayout>