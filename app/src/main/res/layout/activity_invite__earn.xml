<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity.Invite_Earn"

    >


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/_50sdp"
        android:id="@+id/rel_top"
        android:background="@color/colorPrimary"
        android:gravity="center_vertical"
        >
        <ImageView
            android:layout_width="@dimen/_30sdp"
            android:layout_height="@dimen/_30sdp"
            android:layout_marginLeft="@dimen/_15sdp"
            android:src="@drawable/back_24dp"
            />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/rel_top"
        android:id="@+id/rel_bet"
        >

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/_150sdp"
        android:gravity="center"
        android:id="@+id/rel"

        >

        <androidx.cardview.widget.CardView
            android:layout_width="@dimen/_260sdp"
            android:layout_height="@dimen/_130sdp"
            app:cardCornerRadius="@dimen/_2sdp"
            android:elevation="@dimen/_3sdp"


            >


            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="fitXY"
                android:src="@drawable/invite"


                />



        </androidx.cardview.widget.CardView>


    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/rel2"
        android:layout_below="@+id/rel"
        android:layout_marginTop="@dimen/_10sdp"
        >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
       android:textSize="@dimen/_10sdp"
            android:id="@+id/txt_intro"
            android:fontFamily="@font/avenirltstd_light"
            android:gravity="center"


            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="@dimen/_30sdp"
            android:layout_below="@+id/txt_intro"
            android:layout_marginTop="@dimen/_10sdp"
            android:text="Your Invite Code: ABCD1234"
            android:gravity="center"
            android:layout_marginLeft="@dimen/_20sdp"
            android:layout_marginRight="@dimen/_20sdp"
            android:fontFamily="@font/avenirltstd_light"
            android:textStyle="bold"
            android:background="@drawable/dotted"
            android:textColor="@color/colorblack"
            android:textSize="@dimen/_10sdp"

            android:layerType="software"

            />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/rel2"
android:layout_marginTop="@dimen/_10sdp"
        android:id="@+id/rel3"
                >

        <include layout="@layout/snippet_whatsapp_button" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/rel3"
        android:layout_marginTop="@dimen/_5sdp"
        android:gravity="center_vertical"
        android:id="@+id/rel4"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/len1"
            android:gravity="center_vertical"
            android:layout_marginTop="@dimen/_8sdp"

            >



        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
android:background="@color/colorblack"
            android:gravity="center_vertical"
            />
        </LinearLayout>






    </RelativeLayout>

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="@dimen/_30sdp"
    android:layout_below="@+id/rel4"
    android:layout_marginTop="@dimen/_10sdp"
    android:orientation="horizontal"
    android:id="@+id/len3"
    >


<de.hdodenhof.circleimageview.CircleImageView
    android:layout_width="@dimen/_60sdp"
    android:layout_height="match_parent"
    android:layout_marginLeft="@dimen/_20sdp"
    android:src="@drawable/facebook_logo"

    />
    <de.hdodenhof.circleimageview.CircleImageView
        android:layout_width="@dimen/_60sdp"
        android:layout_height="match_parent"
android:layout_marginLeft="@dimen/_10sdp"
        android:src="@drawable/twitter_logo"

        />
    <de.hdodenhof.circleimageview.CircleImageView
        android:layout_width="@dimen/_60sdp"
        android:layout_height="match_parent"
android:layout_marginLeft="@dimen/_10sdp"
android:src="@drawable/messenger_logo"
        />
    <de.hdodenhof.circleimageview.CircleImageView
        android:layout_width="@dimen/_60sdp"
        android:layout_height="match_parent"
android:src="@drawable/ic_share"
android:layout_marginLeft="@dimen/_10sdp"

        />



</LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/_30sdp"
        android:layout_below="@id/len3"
        android:layout_marginTop="@dimen/_5sdp"
        android:id="@+id/len4"
        >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Share your code with your WhatsApp groups and friends"
            android:gravity="center"


            android:fontFamily="@font/avenirltstd_light"

            />



    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/len5"
        android:gravity="center_vertical"
        android:layout_marginTop="@dimen/_10sdp"
   android:layout_below="@+id/len4"
        >



    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
android:background="@color/colorblack"
        android:gravity="center_vertical"
        />
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/_40sdp"
        android:layout_below="@+id/len5"
        android:layout_marginTop="@dimen/_10sdp"
        android:id="@+id/len6"
        android:gravity="center"
        >

        <androidx.cardview.widget.CardView
            android:layout_width="@dimen/_230sdp"
            android:layout_height="match_parent"
            app:cardCornerRadius="@dimen/_2sdp"
            android:elevation="@dimen/_2sdp"
            android:layout_margin="@dimen/_3sdp"
            >

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:hint=" Rs:  HotelKaro Rupee earned by you"
                android:gravity="center"
android:fontFamily="@font/avenirltstd_light"
                android:background="@color/colorLightorange"
                />



        </androidx.cardview.widget.CardView>






    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/_40sdp"
        android:layout_below="@+id/len6"
        android:layout_marginTop="@dimen/_10sdp"
        android:id="@+id/len7"
        android:gravity="center"
        >



            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Terms and Conditions"
                android:gravity="center"
                android:fontFamily="@font/avenirltstd_light"
                android:textColor="@color/colorPrimary"
                />










    </LinearLayout>


        </RelativeLayout>
    </ScrollView>
    </RelativeLayout>


    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
android:layout_below="@+id/rel_bet"
        app:labelVisibilityMode="labeled"
        android:layout_marginTop="-50dp"
        android:id="@+id/bottom_nav_view"
        app:layout_behavior="@string/hide_bottom_view_on_scroll_behavior"
        android:background="@color/colorPrimary"
        app:menu="@menu/menu_bottomnavigation"
        android:layout_gravity="bottom"
        >


    </com.google.android.material.bottomnavigation.BottomNavigationView>





</RelativeLayout>