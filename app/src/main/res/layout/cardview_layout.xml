<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:card_view="http://schemas.android.com/tools"


    android:layout_margin="@dimen/_2sdp"


    >

    <androidx.cardview.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:layout_marginLeft="@dimen/_4sdp"
        android:background="@drawable/edittext_corners"
        android:elevation="@dimen/_5sdp"
        app:cardCornerRadius="@dimen/_4sdp"

        android:layout_margin="@dimen/_3sdp"



        >

        <ImageView
            android:id="@+id/img_cardv"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/_80sdp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/_10sdp"
            android:scaleType="fitXY"
            android:src="@drawable/banglore"
            />

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="80dp"
            android:layout_gravity="center_horizontal"

            android:layout_marginTop="@dimen/_100sdp"


            >

            <RelativeLayout
                android:id="@+id/lay1"
                android:layout_width="wrap_content"
                android:layout_height="25dp"
                android:layout_marginTop="3dp"
                android:orientation="vertical"

                >

                <TextView
                    android:id="@+id/txt_hotel"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/avenirltstd_light"
                    android:maxLines="1"
                    android:text="Lemon Tree Premier"
                    android:textColor="@color/colorPrimary"
                    android:textSize="@dimen/_10sdp"
                    android:textStyle="bold"
                    android:layout_marginLeft="@dimen/_4sdp"
                    />

                <LinearLayout
                    android:layout_width="40dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="@dimen/_15sdp"
                    android:layout_toRightOf="@+id/txt_hotel"
                    android:gravity="center_vertical">


                    <RatingBar
                        android:id="@+id/ratingBar"
                        style="?android:attr/ratingBarStyleSmall"
                        android:layout_width="100dp"
                        android:layout_height="match_parent"

                        android:layout_toRightOf="@+id/txt_hotel"
                        android:indeterminateDrawable="@color/colorPrimary"
                        android:isIndicator="true"
                        android:numStars="5"
                        android:paddingTop="@dimen/_3sdp"
                        android:progressTint="@color/colorPrimary"
                        android:rating="2.0"
                        android:scaleX=".5"
                        android:scaleY=".5"
                        android:secondaryProgressTint="@android:color/transparent"
                        android:transformPivotX="0dp"
                        android:transformPivotY="0dp" />
                </LinearLayout>


            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/lay2"
                android:layout_width="match_parent"
                android:layout_height="25dp"
                android:layout_below="@id/lay1"
                android:layout_marginTop="3dp"
                android:orientation="vertical">

                <ImageView
                    android:layout_marginLeft="@dimen/_4sdp"
                    android:id="@+id/loc"
                    android:layout_width="10dp"
                    android:layout_height="10dp"
                    android:layout_gravity="left"
                    app:srcCompat="@drawable/location_markar24dp" />

                <TextView
                    android:id="@+id/txt_distannce"
                    android:layout_width="70dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="3dp"
                    android:layout_toRightOf="@+id/loc"
                    android:fontFamily="@font/avenirltstd_light"
                    android:maxLines="1"
                    android:text="5555"
                    android:textSize="@dimen/_6sdp" />

                <TextView
                    android:id="@+id/txt_reviews"
                    android:layout_width="96dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="35dp"


                    android:layout_toRightOf="@+id/txt_distannce"
                    android:fontFamily="@font/avenirltstd_light"
                    android:gravity="left"
                    android:text="344 Reviews"

                    android:textSize="10dp"
                    android:textStyle="bold" />


            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="25dp"
                android:layout_below="@id/lay2"
                android:layout_marginTop="3dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/txt_price"
                    android:layout_width="50dp"
                    android:layout_height="match_parent"
                    android:fontFamily="@font/avenirltstd_light"
                    android:gravity="left"
                    android:textSize="10dp"
                    android:layout_marginLeft="@dimen/_4sdp"
                    />

                <TextView
                    android:id="@+id/txt_review"
                    android:layout_width="65dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="@dimen/_52sdp"
                    android:fontFamily="@font/avenirltstd_light"
                    android:gravity="left"
                    android:textColor="@color/colorPrimary"
                    android:textSize="10dp"
                    android:text="Good"

                    />
            </LinearLayout>

        </RelativeLayout>


    </androidx.cardview.widget.CardView>


</androidx.constraintlayout.widget.ConstraintLayout>