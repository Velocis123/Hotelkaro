<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="3">


            <RelativeLayout
                android:id="@+id/rel1"
                android:layout_width="0dp"
                android:layout_margin="@dimen/_2sdp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:gravity="center">


                <ImageView
                    android:id="@+id/img_checkin"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    app:srcCompat="@drawable/check_in_24dp" />

                <TextView
                    android:id="@+id/txt_checkin"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/img_checkin"
                    android:fontFamily="@font/avenirltstd_light"
                    android:gravity="center"
                    android:text="Check IN"
                    android:textColor="@color/colorWhite"
                    android:textSize="@dimen/_8sdp" />

                <TextView
                    android:id="@+id/date_checkin"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/txt_checkin"
                    android:fontFamily="@font/avenirltstd_light"
                    android:gravity="center"
                    android:text="CheckIn Date"
                    android:textColor="@color/colorWhite"
                    android:textSize="@dimen/_8sdp" />


            </RelativeLayout>

            <View
                android:layout_width="@dimen/_1sdp"
                android:layout_height="match_parent"
                android:layout_marginTop="@dimen/_2sdp"
                android:layout_marginBottom="@dimen/_2sdp"
                android:background="@color/colorWhite"/>



            <RelativeLayout
                android:id="@+id/rel2"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_margin="@dimen/_2sdp"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal">


                <ImageView
                    android:id="@+id/img_checkout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    app:srcCompat="@drawable/check_out_24dp" />

                <TextView
                    android:id="@+id/txt_checkout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:layout_below="@+id/img_checkout"
                    android:fontFamily="@font/avenirltstd_light"
                    android:text="Check Out"
                    android:textColor="@color/colorWhite"
                    android:textSize="@dimen/_8sdp" />

                <TextView
                    android:id="@+id/date_checkout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/txt_checkout"
                    android:gravity="center"
                    android:fontFamily="@font/avenirltstd_light"
                    android:text="CheckOut Date"
                    android:textColor="@color/colorWhite"
                    android:textSize="@dimen/_8sdp" />


            </RelativeLayout>


            <View
                android:layout_width="@dimen/_1sdp"
                android:layout_height="match_parent"
                android:layout_marginTop="@dimen/_2sdp"
                android:layout_marginBottom="@dimen/_2sdp"
                android:background="@color/colorWhite"/>


            <RelativeLayout
                android:id="@+id/rel3"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_margin="@dimen/_2sdp"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal">


                <ImageView
                    android:id="@+id/img_people"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    app:srcCompat="@drawable/group_24dp" />

                <TextView
                    android:id="@+id/txt_people"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:layout_below="@+id/img_people"
                    android:fontFamily="@font/avenirltstd_light"
                    android:text="People"
                    android:textColor="@color/colorWhite"
                    android:textSize="@dimen/_8sdp" />

                <TextView
                    android:id="@+id/num_people"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:layout_below="@+id/txt_people"
                    android:fontFamily="@font/avenirltstd_light"
                    android:text="Number of People"
                    android:textColor="@color/colorWhite"
                    android:textSize="@dimen/_8sdp" />

            </RelativeLayout>
        </LinearLayout>
</androidx.coordinatorlayout.widget.CoordinatorLayout>