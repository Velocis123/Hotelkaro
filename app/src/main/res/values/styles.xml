<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>




    <style name="customRatingBar" parent="android:style/Widget.Material.RatingBar.Small">
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="edt_background">

        <item name="backgroundTint">@color/colorWhite</item>
    </style>

    <style name="font">

        <item name="fontFamily">@font/avenirltstd_light</item>


    </style>

    <style name="RedAccent" parent="ThemeOverlay.AppCompat.Light">

        <item name="colorAccent">@color/colorblack</item>
    </style>



    <style name="MyRatingBarTwo" parent="Widget.AppCompat.RatingBar">
        <item name="android:progressDrawable">@drawable/user_rating_bar_custom</item>
        <item name="colorControlNormal">#f57c00</item>
        <item name="android:numStars">5</item>
        <item name="colorControlActivated">#c51162</item>
    </style>


</resources>

